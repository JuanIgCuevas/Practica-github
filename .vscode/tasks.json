{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Python HTTP server (5500)",
			"type": "shell",
			"command": "py",
			"args": [
				"-m",
				"http.server",
				"5500",
				"--directory",
				"src"
			],
			"isBackground": true,
			"problemMatcher": [
				"$msCompile"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build"
		}
	]
}